<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="pos_config_view_form">
            <field name="name">pos.config.form.view</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='iface_precompute_cash']/../.." position="after">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="auto_terminal_shift"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="auto_terminal_shift"/>
                            <div class="text-muted">
                                Automatically open and close terminal shift
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="auto_terminal_payment"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="auto_terminal_payment"/>
                            <div class="text-muted">
                                Automatically start payment when payment method is choosen
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
